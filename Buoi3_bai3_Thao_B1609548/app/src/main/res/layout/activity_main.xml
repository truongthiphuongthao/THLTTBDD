<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0000ff"
        android:textSize="18sp"
        android:text="Enter an url"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nhapurl"
        android:hint="http://www.amazon.com"/>
    <Button
        android:id="@+id/btn_webbrowser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Web Browser"
        android:textStyle="bold"
        android:onClick="onClickWebBrowser"
        tools:ignore="OnClick" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0000ff"
        android:textSize="18sp"
        android:text="Enter a phone number"/>
    <EditText
        android:id="@+id/nhapnumberphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="5556"/>
    <Button
        android:id="@+id/btn_makecalls"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Make Calls"
        android:textStyle="bold"
        android:onClick="onClickMakeCalls"
        tools:ignore="OnClick" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0000ff"
        android:textSize="18sp"
        android:text="Enter meridian and latitude"/>
    <EditText
        android:id="@+id/nhapgeo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="37.827500,-122.481670"/>
    <Button
        android:id="@+id/btn_showMap"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Show Map"
        android:textStyle="bold"
        android:onClick="onClickShowMap"
        tools:ignore="OnClick" />
</LinearLayout>
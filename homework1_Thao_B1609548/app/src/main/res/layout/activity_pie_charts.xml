                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"/>


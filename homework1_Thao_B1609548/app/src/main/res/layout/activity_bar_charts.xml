                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gía trị"
                                android:textSize="20dp"
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="40dp"/>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
